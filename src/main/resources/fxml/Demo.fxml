<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.miyagilabs.blindfold.Demo">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="500.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
        <RowConstraints prefHeight="100.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openFileOnAction" text="Open" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label fx:id="label" GridPane.rowIndex="1" />
    </children>
</GridPane>
